{
  "compilerOptions": {
    "target": "ES2020",
    "module": "CommonJS",
    "moduleResolution": "node",
    "lib": ["esnext"],
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "resolveJsonModule": true,
    "allowSyntheticDefaultImports": true,
    "incremental": false,
    "noEmit": false,
    "outDir": "dist/hardhat",
    "types": ["node", "hardhat"]
  },
  "include": ["hardhat.config.ts", "hardhat.config.cts", "scripts", "test", "typechain", "contracts"]
}

